pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    sh '''
                        echo "Creating project directory if not exists..."
                        mkdir -p /home/mostakim/projects

                        echo "Cloning repository..."
                        if [ -d "/home/mostakim/projects/glpi" ]; then
                            echo "Repository already exists. Pulling latest changes..."
                            cd /home/mostakim/projects/glpi
                            git pull
                        else
                            git clone https://github.com/mostakimidlc-prog/glpi.git /home/mostakim/projects/glpi
                        fi
                    '''
                }
            }
        }
    }
}
